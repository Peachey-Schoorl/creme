<!-- Metadata for The Open Graph protocol http://ogp.me/#metadata -->
    <meta property="og:description" content="{% include description.lqd %}" />
    <meta property="og:image" content="{% if page.image %}{{ page.image }}{% elsif site.image %}{{ site.image }}{% else %}{% endif %}"/>
    <meta property="og:locale" content="{% include title.lqd %}" />
    <meta property="og:title" content="{% include title.lqd %}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{ site.url }}{{ site.baseurl }}{{ page.url }}"/>